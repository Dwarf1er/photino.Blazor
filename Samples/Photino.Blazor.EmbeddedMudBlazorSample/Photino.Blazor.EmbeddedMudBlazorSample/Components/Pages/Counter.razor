@page "/counter"

@using MudBlazor

<PageTitle>Counter</PageTitle>

<MudContainer>
    <MudText Typo="Typo.h4">Counter</MudText>

    <MudText Typo="Typo.body1">
        Current count: <MudText Color="Color.Primary" Class="font-bold">@currentCount</MudText>
    </MudText>

    <MudButton OnClick="IncrementCount" Color="Color.Primary" Variant="Variant.Filled" Class="mt-4">
        Click me
    </MudButton>
</MudContainer>